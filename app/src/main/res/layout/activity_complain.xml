<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ordersure_widget_1"
        android:layout_width = "fill_parent"
        android:layout_height = "@dimen/_41sdp"
        android:padding = "@dimen/_0sdp"
        android:background = "#ffffff"
        android:gravity = "left">

        <RelativeLayout
            android:id="@+id/ordersure_widget_2"
            android:layout_width = "@dimen/_275sdp"
            android:layout_height = "@dimen/_26sdp"
            android:layout_marginTop = "@dimen/_7sdp"
            android:padding = "@dimen/_0sdp"
            android:layout_centerHorizontal = "true"
            android:gravity = "left">

            <ImageView
                android:id="@+id/iv_title_back"
                android:layout_width = "@dimen/_16sdp"
                android:layout_height = "@dimen/_16sdp"
                android:layout_marginLeft = "@dimen/_0sdp"
                android:layout_marginTop = "@dimen/_6sdp"
                android:padding = "@dimen/_0sdp"
                android:src = "@drawable/arrowleftblack"
                android:gravity = "left"/>

            <TextView
                android:id="@+id/ordersure_widget_5"
                android:layout_width = "@dimen/_60sdp"
                android:layout_height = "@dimen/_26sdp"
                android:layout_centerHorizontal = "true"
                android:gravity = "center"
                android:textColor = "#060606"
                android:textSize = "@dimen/_11sdp"
                android:text="投诉/举报"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ordersure_widget_6"
            android:layout_width = "@dimen/_300sdp"
            android:layout_height = "@dimen/_1sdp"
            android:layout_marginTop = "@dimen/_7sdp"
            android:layout_below = "@+id/ordersure_widget_2"
            android:padding = "@dimen/_0sdp"
            android:background = "#dddddd"
            android:gravity = "left"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_second"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_below="@id/ordersure_widget_1"
        android:background = "#ffffff"
        android:gravity = "left">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width = "@dimen/_277sdp"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "@dimen/_11sdp"
            android:layout_centerHorizontal = "true"
            android:gravity = "left">

            <Spinner
                android:id="@+id/complain_spinner"
                android:entries="@array/duixiang"
                android:gravity = "center_vertical"
                android:textColor = "#2a2a2a"
                android:textSize = "@dimen/_10sdp"
                android:layout_width = "@dimen/_80sdp"
                android:layout_height = "@dimen/_25sdp"
                android:layout_toRightOf = "@+id/tv_1"/>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_centerInParent="true"
                android:gravity = "center_vertical"
                android:textColor = "#2a2a2a"
                android:textSize = "@dimen/_10sdp"
                android:text="投诉对象："/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line_1"
            android:layout_width = "fill_parent"
            android:layout_height = "@dimen/_1sdp"
            android:layout_marginTop = "@dimen/_11sdp"
            android:layout_below = "@+id/rl_1"
            android:background = "#dddddd"
            android:gravity = "left"/>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_below="@+id/line_1"
            android:layout_width = "@dimen/_277sdp"
            android:layout_height = "@dimen/_13sdp"
            android:layout_marginTop = "@dimen/_11sdp"
            android:layout_centerHorizontal = "true"
            android:gravity = "left">

            <EditText
                android:id="@+id/et_complain_id"
                android:layout_width = "@dimen/_205sdp"
                android:layout_height = "@dimen/_13sdp"
                android:layout_toRightOf = "@+id/tv_2"
                android:gravity = "center_vertical"
                android:textColor = "#2a2a2a"
                android:textSize = "@dimen/_10sdp"
                android:background = "@null"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_width = "@dimen/_45sdp"
                android:layout_height = "@dimen/_13sdp"
                android:gravity = "center_vertical"
                android:textColor = "#2a2a2a"
                android:textSize = "@dimen/_10sdp"
                android:text="投诉id："/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line_2"
            android:layout_width = "fill_parent"
            android:layout_height = "@dimen/_1sdp"
            android:layout_marginTop = "@dimen/_11sdp"
            android:layout_below = "@+id/rl_2"
            android:background = "#dddddd"
            android:gravity = "left"/>

        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_below="@+id/line_2"
            android:layout_width = "@dimen/_277sdp"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "@dimen/_11sdp"
            android:layout_centerHorizontal = "true"
            android:gravity = "left">

            <EditText
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/et_complain_shuoming"
                android:layout_width = "match_parent"
                android:layout_height = "@dimen/_100sdp"
                android:layout_below = "@+id/tv_3"
                android:gravity="left|top"
                android:textColor = "#2a2a2a"
                android:textSize = "@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width = "wrap_content"
                android:layout_height = "@dimen/_13sdp"
                android:gravity = "center_vertical"
                android:textColor = "#2a2a2a"
                android:textSize = "@dimen/_10sdp"
                android:text="详细说明："/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line_3"
            android:layout_width = "fill_parent"
            android:layout_height = "@dimen/_1sdp"
            android:layout_marginTop = "@dimen/_11sdp"
            android:layout_below = "@+id/rl_4"
            android:background = "#dddddd"
            android:gravity = "left"/>

    </RelativeLayout>

    <Button
        android:id="@+id/complain_send"
        android:layout_alignParentBottom="true"
        android:layout_width = "@dimen/_276sdp"
        android:layout_height = "@dimen/_30sdp"
        android:layout_centerHorizontal = "true"
        android:background="@drawable/shape_red_button"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize = "@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"/>
</RelativeLayout>