<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pingjia_touxiang"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/me_touxiang" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pingjia_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="用户名"
                        android:textColor="#242424"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评论时间："
                            android:textSize="13sp"
                            android:textColor="@color/gray_8d"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2005-02-15 00:04"
                            android:textSize="13sp"
                            android:textColor="@color/gray_8d"/>



                    </LinearLayout>


                </LinearLayout>

                <com.hedgehog.ratingbar.RatingBar
                    android:layout_alignParentRight="true"
                    android:id="@+id/starbar"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:halfstart="false"
                    app:starCount="5"
                    app:starEmpty="@drawable/star_empty"
                    app:starFill="@drawable/star_full"
                    app:starImageHeight="@dimen/_25sdp"
                    app:starImagePadding="@dimen/_1sdp"
                    app:starImageWidth="@dimen/_25sdp" />
            </RelativeLayout>

        </LinearLayout>

            <TextView

                android:id="@+id/pingjia_neirong"
                android:layout_marginTop="10dp"
                android:layout_marginRight="21dp"
                android:layout_marginLeft="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="  率路品情门都类矿认争查写八石北。路样需文却外战素本和近往表须。条布称重近江第就王八外始用阶世厂意。式看特数件计任入业公国已从意。能史将些平现气回严社料数军县务调存."/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/pingjia1"
                android:layout_alignParentLeft="true"
                android:textColor="@color/gray_8d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="接受任务时间："/>
            <TextView
                android:id="@+id/accepttime"
                android:layout_toRightOf="@+id/pingjia1"
                android:textColor="@color/gray_8d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="1980-09-05 07:29"/>
            <TextView
                android:layout_toRightOf="@+id/accepttime"
                android:textColor="@color/gray_8d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text=" 到 "/>
            <TextView
                android:id="@+id/overtime"
                android:layout_below="@+id/accepttime"
                android:layout_toRightOf="@+id/pingjia1"
                android:textColor="@color/gray_8d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="1980-09-05 07:29"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/gray_8d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="完成状态："/>
            <TextView
                android:id="@+id/userstate"
                android:textColor="@color/gray_8d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:text="正在进行中"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f5f5f4" />

</LinearLayout>