<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_shooping_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_shpping_list_img"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:src="@drawable/me_touxiang"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp">

        <TextView
            android:id="@+id/tv_shopping_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换物品"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shopping_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shopping_list_title"
            android:layout_marginTop="10dp"
            android:text="价格："
            android:textColor="#ee5c5c"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_shopping_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shopping_list_title"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/shopping_list_price"
            android:text="6.5"
            android:textColor="#ee5c5c"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shopping_list_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shopping_list_title"
            android:layout_toRightOf="@+id/shopping_list_price"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:text="库存："
            android:textSize="18sp"
            android:textColor="#ee5c5c"
            />
        <TextView
            android:id="@+id/tv_shopping_list_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shopping_list_title"
            android:layout_toRightOf="@+id/shopping_list_last"
            android:layout_marginTop="10dp"
            android:text="4"
            android:textSize="18sp"
            android:textColor="#ee5c5c"
            />
        </RelativeLayout>
    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="7dp"
    android:background="#f5f5f4" />
</LinearLayout>