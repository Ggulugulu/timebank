<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="21dp"
        android:paddingTop="13dp"
        android:paddingRight="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/me_touxiang" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp">

                <TextView
                    android:id="@+id/vol_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="项目标题"
                    android:textStyle="bold"
                    android:textColor="#242424"
                    android:textSize = "@dimen/_11sdp" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="用户名"
                    android:textColor="#9f9f9f"
                    android:textSize="12sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_toLeftOf="@+id/tv_item_vol_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类："
                android:textStyle="bold"
                android:textColor="#242424"
                android:textSize = "@dimen/_11sdp" />

            <TextView
                android:layout_toLeftOf="@+id/tv_item_vol_state"
                android:layout_marginRight="@dimen/_40sdp"
                android:id="@+id/tv_item_vol_category"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="照顾小孩"
                android:textStyle="bold"
                android:textSize = "@dimen/_11sdp" />

            <TextView
                android:layout_toLeftOf="@+id/tv_item_vol_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态："
                android:textStyle="bold"
                android:textColor="#242424"
                android:textSize = "@dimen/_11sdp" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_item_vol_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可承接"
                android:textColor="@color/green_66"
                android:textStyle="bold"
                android:textSize = "@dimen/_11sdp" />
        </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize = "@dimen/_11sdp"
                        android:text="时间币："/>

                    <TextView
                        android:id="@+id/tv_item_vol_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize = "@dimen/_11sdp"
                        android:textColor="@color/title_gray"
                        android:text="20"/>

                    <TextView
                        android:layout_marginLeft="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize = "@dimen/_11sdp"
                        android:text="服务时间："/>

                    <TextView
                        android:id="@+id/tv_item_vol_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize = "@dimen/_11sdp"
                        android:textColor="@color/title_gray"
                        android:text="20"/>
                </LinearLayout>

                 <LinearLayout
                     android:layout_marginTop="5dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize = "@dimen/_11sdp"
                            android:text="有效时间："/>
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                         <TextView
                            android:id="@+id/tv_item_vol_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize = "@dimen/_11sdp"
                            android:textColor="@color/title_gray"
                            android:text="2014-08-30 13:38:00"/>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize = "@dimen/_11sdp"
                         android:textColor="@color/title_gray"
                         android:text=" 到 "/>
                     <TextView
                         android:id="@+id/tv_item_vol_end_time"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize = "@dimen/_11sdp"
                         android:maxLines="1"
                         android:textColor="@color/title_gray"
                         android:text="2021-05-17 10:28:00"/>
                     </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize = "@dimen/_11sdp"
                    android:text="发布日期："/>

                <TextView
                    android:id="@+id/tv_item_fa_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize = "@dimen/_11sdp"
                    android:textColor="@color/title_gray"
                    android:text="1993-11-12 09:17"/>

            </LinearLayout>

            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/tv_item_vol_xiangqing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textSize = "@dimen/_11sdp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bt_attend"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/bt_attend"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="参加活动"
                android:background="@drawable/shape_green_button"
                android:textColor="#ffffff"
                android:textSize = "@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="visible"/>


        </RelativeLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f5f5f4" />
</LinearLayout>