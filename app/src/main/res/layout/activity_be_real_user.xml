<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gl_main_ordersure"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/ordersure_widget_1"
        android:layout_width = "fill_parent"
        android:layout_height = "@dimen/_41sdp"
        android:padding = "@dimen/_0sdp"
        android:background = "#ffffff"
        android:gravity = "left">

        <RelativeLayout
            android:id="@+id/ordersure_widget_2"
            android:layout_width = "@dimen/_275sdp"
            android:layout_height = "@dimen/_26sdp"
            android:layout_marginTop = "@dimen/_7sdp"
            android:padding = "@dimen/_0sdp"
            android:layout_centerHorizontal = "true"
            android:gravity = "left">

            <ImageView
                android:id="@+id/iv_title_back"
                android:layout_width = "@dimen/_16sdp"
                android:layout_height = "@dimen/_16sdp"
                android:layout_marginLeft = "@dimen/_0sdp"
                android:layout_marginTop = "@dimen/_6sdp"
                android:padding = "@dimen/_0sdp"
                android:src = "@drawable/arrowleftblack"
                android:gravity = "left"/>

            <TextView
                android:id="@+id/ordersure_widget_5"
                android:layout_width = "@dimen/_60sdp"
                android:layout_height = "@dimen/_26sdp"
                android:layout_centerHorizontal = "true"
                android:gravity = "center"
                android:textColor = "#060606"
                android:textSize = "@dimen/_11sdp"
                android:text="实名认证"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ordersure_widget_6"
            android:layout_width = "@dimen/_300sdp"
            android:layout_height = "@dimen/_1sdp"
            android:layout_marginTop = "@dimen/_7sdp"
            android:layout_below = "@+id/ordersure_widget_2"
            android:padding = "@dimen/_0sdp"
            android:background = "#dddddd"
            android:gravity = "left"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ordersure_widget_7"
        android:layout_width = "fill_parent"
        android:layout_height = "fill_parent"
        android:layout_below = "@+id/ordersure_widget_1"
        android:background = "#f6f6f6"
        android:gravity = "left"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/ordersure_widget_67"
            android:layout_width = "fill_parent"
            android:layout_height = "fill_parent"
            android:background = "#f6f6f6"
            android:gravity = "left">
            <RelativeLayout
                android:id="@+id/ordersure_widget_25"
                android:layout_width = "fill_parent"
                android:layout_height = "wrap_content"
                android:background = "#ffffff"
                android:gravity = "left">

                <RelativeLayout
                    android:id="@+id/ordersure_widget_9"
                    android:layout_width = "@dimen/_277sdp"
                    android:layout_height = "@dimen/_13sdp"
                    android:layout_marginTop = "@dimen/_11sdp"
                    android:padding = "@dimen/_0sdp"
                    android:layout_centerHorizontal = "true"
                    android:gravity = "left">

                    <EditText
                        android:id="@+id/et_real_name"
                        android:layout_width = "@dimen/_205sdp"
                        android:layout_height = "@dimen/_13sdp"
                        android:layout_toRightOf = "@+id/ordersure_widget_10"
                        android:gravity = "center_vertical"
                        android:textColor = "#2a2a2a"
                        android:textSize = "@dimen/_10sdp"
                        android:background = "@null"/>
                    <!--                        android:hint="请输入真实姓名"/>-->

                    <TextView
                        android:id="@+id/ordersure_widget_10"
                        android:layout_width = "@dimen/_45sdp"
                        android:layout_height = "@dimen/_13sdp"
                        android:layout_marginLeft = "@dimen/_0sdp"
                        android:layout_marginTop = "@dimen/_0sdp"
                        android:padding = "@dimen/_0sdp"
                        android:gravity = "center_vertical"
                        android:textColor = "#2a2a2a"
                        android:textSize = "@dimen/_10sdp"
                        android:text="真实姓名"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ordersure_widget_12"
                    android:layout_width = "fill_parent"
                    android:layout_height = "@dimen/_1sdp"
                    android:layout_marginTop = "@dimen/_11sdp"
                    android:layout_below = "@+id/ordersure_widget_9"
                    android:background = "#dddddd"
                    android:gravity = "left"/>



                <RelativeLayout
                    android:id="@+id/ordersure_widget_13"
                    android:layout_width = "@dimen/_277sdp"
                    android:layout_height = "@dimen/_13sdp"
                    android:layout_marginTop = "@dimen/_13sdp"
                    android:layout_below = "@+id/ordersure_widget_12"
                    android:layout_centerHorizontal = "true"
                    android:gravity = "left">

                    <EditText
                        android:id="@+id/et_real_id"
                        android:layout_width = "@dimen/_205sdp"
                        android:layout_height = "@dimen/_13sdp"
                        android:layout_marginLeft = "@dimen/_0sdp"
                        android:layout_toRightOf = "@+id/ordersure_widget_14"
                        android:layout_marginTop = "@dimen/_0sdp"
                        android:padding = "@dimen/_0sdp"
                        android:gravity = "center_vertical"
                        android:textColor = "#2a2a2a"
                        android:textSize = "@dimen/_10sdp"
                        android:background = "@null"/>
<!--                        android:hint="请输入身份证号码"/>-->

                    <TextView
                        android:id="@+id/ordersure_widget_14"
                        android:layout_width = "@dimen/_45sdp"
                        android:layout_height = "@dimen/_13sdp"
                        android:layout_marginLeft = "@dimen/_0sdp"
                        android:layout_marginTop = "@dimen/_0sdp"
                        android:padding = "@dimen/_0sdp"
                        android:gravity = "center_vertical"
                        android:textColor = "#2a2a2a"
                        android:textSize = "@dimen/_10sdp"
                        android:text="身份证号"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ordersure_widget_16"
                    android:layout_width = "fill_parent"
                    android:layout_height = "@dimen/_1sdp"
                    android:layout_marginTop = "@dimen/_11sdp"
                    android:layout_below = "@+id/ordersure_widget_13"
                    android:padding = "@dimen/_0sdp"
                    android:background = "#dddddd"
                    android:gravity = "left"/>


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_be_real"
        android:layout_width = "@dimen/_276sdp"
        android:layout_height = "@dimen/_30sdp"
        android:layout_marginTop = "@dimen/_15sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_centerHorizontal = "true"
        android:background="@drawable/shape_green_button"
        android:text="提交"
        android:textColor="#ffffff"
        android:gravity = "center"
        android:textSize = "@dimen/_10sdp" />


</RelativeLayout>
