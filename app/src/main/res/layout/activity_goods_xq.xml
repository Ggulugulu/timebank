<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".activity.GoodsXqActivity">

    <RelativeLayout
        android:id="@+id/rl_goodsxq_1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrowleftblack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:textColor="@color/title_gray"/>
    </RelativeLayout>
    <View
        android:id="@+id/goodsxq_2"
        android:layout_below="@+id/rl_goodsxq_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_tv_gray"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/goodsxq_2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingTop="13dp"
                android:paddingRight="21dp">

                <ImageView
                    android:id="@+id/img_header"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/me_touxiang" />
                <LinearLayout
                    android:layout_toRightOf="@id/img_header"
                    android:layout_marginLeft="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                            android:id="@+id/goods_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="兑换物1号"
                            android:textStyle="bold"
                            android:textColor="#242424"
                            android:textSize="18sp" />
                    <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="商品编号："/>

                    <TextView
                        android:id="@+id/tv_goods_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/title_gray"
                        android:text="10086"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="兑换方式："/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/title_gray"
                            android:text="服务时长"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="已兑换数："/>

                        <TextView
                            android:id="@+id/tv_goods_gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/title_gray"
                            android:text="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="兑换时长："/>

                        <TextView
                            android:id="@+id/tv_goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/title_gray"
                            android:textStyle="bold"
                            android:text="9.96"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="商品库存："/>

                        <TextView
                            android:id="@+id/tv_goods_last"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/title_gray"
                            android:text="4"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#f5f5f4" />
            <TextView
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="21dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="介绍："
                android:textStyle="bold"
                android:textSize="30sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#f5f5f4" />
            <ImageView
                android:id="@+id/goodsq_pic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/aa"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#f5f5f4" />
            <ImageView
                android:id="@+id/goodsq_pic2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/aa"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#f5f5f4" />
            <ImageView
                android:id="@+id/goodsq_pic3"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#f5f5f4" />
            <ImageView
                android:id="@+id/goodsq_pic4"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#f5f5f4" />
            <ImageView
                android:id="@+id/goodsq_pic5"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/ll_bugun_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_for_subtract"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/iv_edit_subtract" />

            <TextView
                android:id="@+id/tv_for_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minEms="1"
                android:text="1"
                android:textColor="#666666"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/iv_for_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/iv_edit_add" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_want"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="立即兑换"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/shape_green_button"
            />

    </RelativeLayout>

    </RelativeLayout>